FORM DB_UPD_ZVFI_0087 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVFI_0087.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVFI_0087-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTFI_0087 WHERE
  ZDTE_TIPO = ZVFI_0087-ZDTE_TIPO AND
  REPID = ZVFI_0087-REPID AND
  GRPNO = ZVFI_0087-GRPNO .
    IF SY-SUBRC = 0.
    DELETE ZTFI_0087 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTFI_0087 WHERE
  ZDTE_TIPO = ZVFI_0087-ZDTE_TIPO AND
  REPID = ZVFI_0087-REPID AND
  GRPNO = ZVFI_0087-GRPNO .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTFI_0087.
    ENDIF.
ZTFI_0087-MANDT =
ZVFI_0087-MANDT .
ZTFI_0087-ZDTE_TIPO =
ZVFI_0087-ZDTE_TIPO .
ZTFI_0087-REPID =
ZVFI_0087-REPID .
