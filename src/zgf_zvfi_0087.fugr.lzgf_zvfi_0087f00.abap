ZVFI_0087-GRPNO .
ZTFI_0087-SEC =
ZVFI_0087-SEC .
ZTFI_0087-VTEXT1 =
ZVFI_0087-VTEXT1 .
ZTFI_0087-ST_OK =
ZVFI_0087-ST_OK .
ZTFI_0087-ST_NOK =
ZVFI_0087-ST_NOK .
ZTFI_0087-ACTIVO =
ZVFI_0087-ACTIVO .
    IF SY-SUBRC = 0.
    UPDATE ZTFI_0087 ##WARN_OK.
    ELSE.
    INSERT ZTFI_0087 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZVFI_0087-UPD_FLAG,
STATUS_ZVFI_0087-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
